<%= render"layouts/errors",obj: @customer %>
<div class="container">
  <div class="row">
    <div class="title">
      <span><%=@customer.nickname%>さんの会員詳細</span>
    </div>
  </div>
  <div class="row">
    <table class="table table-borderless mb-5">
      <tbody>
        <tr>
          <td width="200vw">会員ID</td>
          <td width="200vw"><%= @customer.id %></td>
        </tr>
        <tr>
          <td>ニックネーム</td>
          <td><%= @customer.nickname %></td>
        </tr>
        <tr>
          <td>ユーザーID</td>
          <td><%= @customer.user_id %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.call_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <%= form_with model: @customer,url:admin_customer_path,method: :patch,local:true do |f|%>
        <tr>
          <td>
            <%= f.label :会員ステータス%>
          </td>
          <td>
            <%= f.radio_button :is_deleted, false%>有効  <%= f.radio_button :is_deleted, true%>退会
          </td>
          <td>
            <%= f.submit "会員のステータスを変更" , class:"button", "data-confirm"=>"本当に変更してもよろしいですか？" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

