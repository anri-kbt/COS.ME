<div id="rate_<%= cosmetic.id %>" class="form-group"></div>
<script>
$(document).on('turbolinks:load', function() {
  $('#rate_<%= cosmetic.id %>').empty();
  $('#rate_<%= cosmetic.id %>').raty({
    size: 20,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    half: true,
    readOnly: true, //読み取りのみ（入力はできない）
    score: <%= cosmetic.evaluation %>, //星評価（入力値）
  });
});
</script>