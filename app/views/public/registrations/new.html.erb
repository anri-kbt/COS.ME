<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h5 class="col my-4 text-center">
        <span> Sign up </span>
      </h5>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group">
          <span>お名前（漢字）</span></br>
            <%=f.label :"姓"%>
            <%=f.text_field :last_name,:placeholder=>"越度"%>
            <%=f.label :"名"%>
            <%=f.text_field :first_name,:placeholder=>"美衣"%>
        </div>

        <div class="form-group">
          <span>お名前（フリガナ）</span></br>
            <%=f.label :"セイ"%>
            <%=f.text_field :last_name_kana,:placeholder=>"コスド"%>
            <%=f.label :"メイ"%>
            <%=f.text_field :first_name_kana,:placeholder=>"ミイ"%>
        </div>

        <div class="form-group">
          <span><%= f.label :メールアドレス %></span></br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:placeholder=>"sample@example.com"%>
        </div>

        <div class="form-group">
          <span><%=f.label :携帯電話番号（ハイフンなし）%></span></br>
            <%=f.text_field :call_number,:placeholder=>"00000000000"%>
        </div>

        <div class="form-group">
          <span><%= f.label :パスワード%>
            <% if @minimum_password_length %>(<%= @minimum_password_length %> 文字以上)</span></br>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <span><%= f.label :パスワード（確認用） %></span></br>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="form-group text-center">
          <span><%= f.submit "新規登録" %></span>
        </div>
      <% end %>
      <h5>
        <span> 既に登録済みの方 </span>
      </h5>
      <div>
         <%=link_to"こちら",new_customer_session_path%>からログインしてください。
      </div>
    </div>
  </div>
</div>


<%#= render "public/shared/links" %>
