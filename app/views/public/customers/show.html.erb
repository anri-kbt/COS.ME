<div class="container">
  <div class="row">
    <div class="title">
      <h3>ME</h3>
    </div>
  </div>
</div>
<div class="container">
  <div class="row mx-5 pb-2">
      <h4><span>MY情報</span></h4>
      <%= link_to edit_customer_path(current_customer), class:"link2" do %>
        <i class="ri-user-settings-line fa-lg"></i>
      <% end %>
  </div>
  <div class="row">
    <table class="table table-bordered col-10 mx-auto">
      <tbody>
        <tr>
          <td width="150" class="bg-light">プロフィール画像</td>
          <td><%= image_tag @customer.get_profile_image(100,100) %></td>
        </tr>
        <tr>
          <td width="150" class="bg-light">ニックネーム</td>
          <td width="200"><%= @customer.nickname %></td>
        </tr>
        <tr>
          <td width="150" class="bg-light">ユーザーID</td>
          <td width="200"><%= @customer.user_id %></td>
        </tr>
        <tr>
          <td scope="col" class="bg-light">電話番号</td>
          <td><%= @customer.call_number %></td>
        </tr>
        <tr>
          <td scope="col" class="bg-light">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>