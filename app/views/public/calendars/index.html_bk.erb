<div class="container">
  <div class="calendar-row">
  <% e = Enumerator.new do |yielder| %>
    <% head = Date.today.beginning_of_year %>
    <% tail = Date.today.end_of_year %>

    <% while head <= tail %>
      <% yielder << head %>
      <%= link_to calendars_path(month: head) do %>
        <%= head.month %><span>æœˆ</span>
      <% end %>
      <% head = head.next_month %>
    <% end %>
  <% end %>
