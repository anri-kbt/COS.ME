<header>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><%= image_tag 'logo1.png', size:"170x70" %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if customer_signed_in? %>
          <div class="pt-2 px-2">
            <%= form_with url: search_cosmetics_path, local: true, method: :get do |form| %>
              <form id="keyword" action="/cosmetics/search" method="get">
                <input id="keyword"  id="keyword" name="keyword" type="text" placeholder="キーワードから探す" />
                <button id="search-button" type="submit"><%= image_tag 'search-2-line.png',size:"20x20" %></button>
              </form>
            <% end %>
          </div>
          <li>
            <%= link_to cosmetics_path,class: 'nav-link text-light' do %>
              <i class="ri-eye-close-fill"></i> Cosmetics
            <% end %>
          </li>
          <li>
            <%= link_to mycosmetics_path(current_customer),class: 'nav-link text-light' do %>
              <i class="ri-home-3-line"></i> My Room
            <% end %>
          </li>
          <li>
            <%= link_to destroy_customer_session_path, method: :delete,class: 'nav-link text-light' do %>
              <i class="ri-logout-box-r-line"></i> Log out
            <% end %>
          </li>
        <%elsif admin_signed_in?%>
          <li>
            <%=link_to admin_cosmetics_path,class:'nav-link text-light' do %>
              <i class="ri-eye-close-fill"></i><span>投稿一覧</span>
            <%end%>
          </li>
          <li>
            <%=link_to admin_customers_path,class:'nav-link text-light' do %>
              <i class="ri-user-line"></i><span>会員一覧</span>
            <%end%>
          </li>
          <li>
            <%= link_to destroy_admin_session_path,method: :delete,class:'nav-link text-light' do %>
              <i class="ri-logout-box-r-line"></i><span>ログアウト</span>
            <%end%>
          </li>
        <% else %>
          <li>
            <%= link_to new_customer_registration_path,class: 'nav-link text-light' do %>
              <i class="fas fa-user-plus"></i> Sign up
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_session_path ,class: 'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt"></i> Log in
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>